{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2015"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": "src",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
        "exclude": [
            "node_modules",
            "dist",
            "**/*.test.ts",
            "src/tests"
        ]
}